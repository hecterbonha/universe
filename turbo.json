{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "cache": false,
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false
    },
    "serve": {
      "cache": false
    }
  },
  "globalEnv": [".env"]
}
